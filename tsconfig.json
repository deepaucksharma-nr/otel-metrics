{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": false,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@intellimetric/contracts": ["packages/contracts"],
      "@intellimetric/contracts/*": ["packages/contracts/*"]
    },
    "types": ["node"]
  },
  "include": ["src", "tests", "vite.config.js"]
}